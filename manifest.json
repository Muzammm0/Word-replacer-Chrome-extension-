// manifest.json

{
  "manifest_version": 2,
  "name": "Word Replacer",
  "version": "1.1",
  "description": "A simple extension that replaces a word on a web page",
  "permissions": [
    "activeTab"
  ],
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ]
}
